@page "/ChatPopUp"
@using Microsoft.JSInterop

<a id="open-button" class="open-button no-fade d-flex align-items-center justify-content-between text-decoration-none d-none"
   onclick="openForm()">
    <h5>Chat</h5>
    <i class="bi bi-chevron-compact-down"></i>
</a>
<div class="chat-popup panel-collapse collapse border-0" id="chatbox">
   
        @*<ChatUserList></ChatUserList>*@
        @if (showChatMessage == true)
    {
        <ChatPage OnUserChatClose="HandleUserClose"></ChatPage>
    }
    else if (showChatMessage == false)
    {
        <ChatUserList OnUserClicked="HandleUserClicked"></ChatUserList>
    }
    

</div>
@inject IJSRuntime JS;

@code {
    private bool showChatMessage = false;

    private void HandleUserClicked()
    {
        showChatMessage = true;
    }
    private void HandleUserClose()
    {
        showChatMessage = false;
    }

}